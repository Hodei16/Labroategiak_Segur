# User1 mezua zifratu User2-rentzako

echo "Hola User2, este es un mensaje de User1" > mensaje_user1.txt

gpg --encrypt --recipient 412A402035D37567E9FFE4167D21D2B70FC475BC --output mensaje_cifrado.gpg mensaje_user1.txt

---------------------------------------------------------------------------------------------------

# User2 mezua deszifratu User1-rentzako

gpg --decrypt --output mensaje_descifrado.txt mensaje_cifrado.gpg

cat mensaje_descifrado.txt

